    <resultMap id="BaseResultMap" type="test.ticket.tickettools.domain.entity.TaskEntity">
        <constructor>
            <arg column="id" javaType="java.lang.Long" jdbcType="BIGINT"/>
            <arg column="login_phone" javaType="java.lang.String" jdbcType="VARCHAR"/>
            <arg column="ip" javaType="java.lang.String" jdbcType="VARCHAR"/>
