    <insert id="insert" parameterType="test.ticket.tickettools.domain.entity.TaskEntity" useGeneratedKeys="true"
            keyProperty="id">
        insert into task (id, login_phone, ip,
                          use_date, auth, create_date,
                          update_date, user_id, channel,
                          venue, session)
        values (#{id,jdbcType=BIGINT}, #{loginPhone,jdbcType=VARCHAR}, #{ip,jdbcType=VARCHAR},
                #{useDate,jdbcType=DATE}, #{auth,jdbcType=VARCHAR}, #{createDate,jdbcType=TIMESTAMP},
                #{updateDate,jdbcType=TIMESTAMP}, #{userId,jdbcType=BIGINT}, #{channel,jdbcType=INTEGER},
                #{venue,jdbcType=INTEGER}, #{session,jdbcType=INTEGER})
    </insert>
    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select *
        from task
        where id = #{id,jdbcType=BIGINT}
    </select>
    <select id="getUnDoneTasks" parameterType="test.ticket.tickettools.domain.entity.TaskEntity" resultMap="BaseResultMap">
        select
        *
        from task
        <where>
            done =0
            <if test='useDate!=null'>
                AND use_date = #{useDate}
            </if>
        </where>
    </select>
    <select id="getAllUnDoneTasks" parameterType="test.ticket.tickettools.domain.entity.TaskEntity" resultMap="BaseResultMap">
        select
        *
        from task
        <where>
            done =0
            <if test='useDate!=null'>
                AND use_date > #{useDate}
            </if>
        </where>
    </select>
    <select id="fuzzyQuery" parameterType="test.ticket.tickettools.domain.entity.TaskEntity" resultMap="BaseResultMap">
        SELECT * FROM task
        where
        1=1
        <if test='loginPhone!=null and loginPhone!=""'>
            AND login_phone = #{loginPhone}
        </if>
        <if test='useDate!=null'>
            AND use_date = #{useDate}
        </if>
        order by id DESC
    </select>
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete
        from task
        where id = #{id,jdbcType=BIGINT}
    </delete>
    <update id="updateTask" parameterType="test.ticket.tickettools.domain.entity.TaskEntity">
        update task
        <set>
            <if test='loginPhone!=null'>
                login_phone = #{loginPhone},
            </if>
            <if test='done!=null'>
                done = #{done},
            </if>
            <if test='userId!=null'>
                user_id = #{userId},
            </if>
            <if test='useDate!=null'>
                use_date = #{useDate},
            </if>
            <if test='auth!=null'>
                auth = #{auth},
            </if>
            <if test='updateDate!=null'>
                update_date = #{updateDate}
            </if>
        </set>
        where id = #{id}
    </update>
